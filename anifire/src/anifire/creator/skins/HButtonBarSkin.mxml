<?xml version="1.0" encoding="utf-8"?>
<s:Skin
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:core="mx.core.*"
	alpha.disabled="0.5">

	<fx:Metadata>
		[HostComponent("spark.components.ButtonBar")]
	</fx:Metadata>

	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</s:states>

	<fx:Declarations>
		<fx:Component id="firstButton">
			<s:ButtonBarButton skinClass="anifire.creator.skins.CustomButtonBarButtonSkin" buttonMode="true"/>
		</fx:Component>
		<fx:Component id="lastButton">
			<s:ButtonBarButton skinClass="anifire.creator.skins.CustomButtonBarButtonSkin" buttonMode="true"/>
		</fx:Component>
		<fx:Component id="middleButton">
			<s:ButtonBarButton skinClass="anifire.creator.skins.CustomButtonBarButtonSkin" buttonMode="true"/>
		</fx:Component>
	</fx:Declarations>

	<s:DataGroup id="dataGroup" width="100%" height="100%">
		<s:layout>
			<s:HorizontalLayout gap="-4" columnWidth="45" variableColumnWidth="false"/>
		</s:layout>
	</s:DataGroup>

</s:Skin>