<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009">
	 
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>

	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	
	<!--- @private -->
	<s:Group width="100%" height="100%">
		<s:Rect width="100%" height="100%">
			<s:stroke>
				<s:SolidColorStroke color="0x96A2B4"/>
			</s:stroke>
		</s:Rect>
		<s:Group top="4" bottom="4" left="4" right="4" clipAndEnableScrolling="true">
			<s:BitmapImage left="0" right="0" source="@Embed('../images/bodyTypeBg.png')" smooth="true"/>
		</s:Group>
	</s:Group>
	<s:Group horizontalCenter="0" verticalCenter="0">
		<s:BitmapImage source="@Embed('../images/createCharButton_normal.png')" smooth="true" verticalCenter="0" horizontalCenter="0"/>
		<s:BitmapImage source="@Embed('../images/createCharButton_hover.png')" visible="false" visible.over="true" smooth="true" verticalCenter="0" horizontalCenter="0"/>
	</s:Group>

</s:Skin>
