<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009">
	
	<fx:Metadata>
		<![CDATA[ 
			[HostComponent("spark.components.Button")]
		]]>
	</fx:Metadata>

	<s:states>
		<s:State name="up"/>
		<s:State name="down"/>
		<s:State name="over"/>
		<s:State name="disabled"/>
	</s:states>

	<s:Group id="sliderContentGroup" left="0" right="0" top="0" bottom="0" mask="{maskGroup}">
		<s:BitmapImage
			left="0"
			right="0"
			top="0"
			bottom="0"
			fillMode="scale"
			scaleMode="stretch"
			source="@Embed('../images/colorPicker/colorSliderTrack.png')"/>
	</s:Group>
	<s:Group id="maskGroup" left="5" right="5" top="4" bottom="4">
		<s:Rect
			left="0"
			right="0"
			top="0"
			bottom="0"
			radiusX="7"
			radiusY="7">
			<s:fill>
				<s:SolidColor/>
			</s:fill>
		</s:Rect>
	</s:Group>
	<s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor alpha="0"/>
		</s:fill>
	</s:Rect>

</s:SparkSkin>
