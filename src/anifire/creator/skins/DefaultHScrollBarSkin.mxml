<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	minWidth="35" minHeight="15" alpha.disabled="0.5" alpha.inactive="0.5">

	<fx:Metadata>
		[HostComponent("spark.components.HScrollBar")]
	</fx:Metadata>

	<s:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
		<s:State name="inactive"/>
	</s:states>

	<s:Button
		id="track"
		left="1" right="1" width="54"
		focusEnabled="false" tabEnabled="false" buttonMode.normal="true"
		skinClass="anifire.creator.skins.DefaultHScrollBarTrackSkin"/>
	<s:Button
		id="thumb" visible.inactive="false"
		focusEnabled="false" tabEnabled="false" buttonMode.normal="true"
		skinClass="anifire.creator.skins.DefaultHScrollBarThumbSkin"/>

</s:SparkSkin>