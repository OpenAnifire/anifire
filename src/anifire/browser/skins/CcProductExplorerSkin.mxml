<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="anifire.browser.components.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.supportClasses.SkinnableComponent")]
	</fx:Metadata>
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="loading"/>
		<s:State name="categoryExpanded"/>
	</s:states>
	
	<s:Group width="100%" height="100%" id="chromeGroup">
		<s:VGroup width="100%" height="100%" horizontalAlign="center">
			<s:List width="100%" skinClass="anifire.browser.skins.CcProductExplorerListSkin" verticalScrollPolicy="auto" horizontalScrollPolicy="off" id="productList"/>
			<components:PageNavigation skinClass="anifire.browser.skins.PageNavigationSkin" id="pageNav"/>
		</s:VGroup>
	</s:Group>
	
</s:Skin>
